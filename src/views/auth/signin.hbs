<div class="container col-md-4">
  <h3> Iniciar sesión </h3>
  <form action="/signin" method="POST">
    <div class="form-group row">
      <label for="username" class="col-4 col-form-label"></label>
      <div class="col-8">
        <input id="username" name="username" placeholder="Usuario" type="text" class="form-control" required="required">
      </div>
    </div>
    <div class="form-group row">
      <label class="col-4 col-form-label" for="password"></label>
      <div class="col-8">
        <input id="password" name="password" placeholder="contraseña" type="text" class="form-control"
          required="required">
      </div>
    </div>
    <div class="form-group row">
      <div class="offset-4 col-8">
        <button name="submit" type="submit" class="btn btn-primary">Ingresar</button>
      </div>
    </div>
  </form>
</div>